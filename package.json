{
  "name": "siteoptz-ai",
  "version": "1.0.1",
  "description": "AI Tool Review and Comparison Platform",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next export",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "npm run test:integration && npm run test:schema",
    "test:integration": "node scripts/test-integration.js",
    "test:schema": "node scripts/test-schema.js",
    "test:api": "node scripts/test-api.js",
    "test:templates": "node scripts/test-templates.js",
    "deploy": "npm run build && npm run export",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod",
    "analyze": "cross-env ANALYZE=true next build",
    "sitemap": "node scripts/generate-sitemap.js",
    "optimize": "npm run lint:fix && npm run type-check && npm run test",
    "clean": "rm -rf .next out node_modules/.cache",
    "prepare": "husky install",
    "postbuild": "npm run sitemap"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.19",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.3.0",
    "@mendable/firecrawl-js": "^1.29.3",
    "@types/formidable": "^3.4.5",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vercel/analytics": "^1.5.0",
    "autoprefixer": "^10.4.0",
    "clsx": "^2.0.0",
    "critters": "^0.0.23",
    "date-fns": "^2.30.0",
    "dotenv": "^17.2.1",
    "formidable": "^3.5.4",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.263.1",
    "markdown-pdf": "^11.0.0",
    "next": "^14.0.0",
    "nodemailer": "^6.10.1",
    "postcss": "^8.4.0",
    "puppeteer": "^24.16.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-hook-form": "^7.45.0",
    "react-hot-toast": "^2.4.0",
    "react-intersection-observer": "^9.5.0",
    "recharts": "^3.1.2",
    "sharp": "^0.32.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.0.0",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/nodemailer": "^6.4.18",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.0",
    "chalk": "^5.3.0",
    "cross-env": "^7.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "glob": "^10.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "node-fetch": "^2.7.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.0"
  },
  "optionalDependencies": {
    "@hubspot/api-client": "^10.0.0",
    "@mailchimp/mailchimp_marketing": "^3.0.0",
    "@prisma/client": "^5.4.0",
    "@sendgrid/mail": "^7.7.0",
    "mongodb": "^6.18.0",
    "postmark": "^4.0.5",
    "prisma": "^5.4.0",
    "redis": "^4.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/siteoptz/siteoptz-ai.git"
  },
  "keywords": [
    "ai-tools",
    "comparison",
    "reviews",
    "nextjs",
    "typescript",
    "tailwindcss",
    "seo"
  ],
  "author": "SiteOptz Team",
  "license": "MIT",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "prettier"
    ],
    "plugins": [
      "jsx-a11y"
    ],
    "rules": {
      "jsx-a11y/alt-text": "error",
      "jsx-a11y/anchor-has-content": "error",
      "jsx-a11y/anchor-is-valid": "error",
      "jsx-a11y/click-events-have-key-events": "error",
      "jsx-a11y/heading-has-content": "error",
      "jsx-a11y/no-redundant-roles": "error",
      "jsx-a11y/role-has-required-aria-props": "error",
      "jsx-a11y/role-supports-aria-props": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "nextBundleAnalysis": {
    "budget": {
      "client": "512kB",
      "server": "1MB"
    },
    "budgetPercentIncreaseRed": 20,
    "minimumChangeThreshold": 0
  }
}
