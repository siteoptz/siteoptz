{
  "manifest_version": 3,
  "name": "SiteOptz AI Tools Finder",
  "version": "1.0.0",
  "description": "Discover and compare AI tools instantly with SiteOptz. Find the perfect AI solution for your needs.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://siteoptz.ai/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SiteOptz AI Tools Finder",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}