# Next.js Configuration
NEXT_PUBLIC_BASE_URL=https://siteoptz.ai
NEXT_PUBLIC_SITE_NAME=SiteOptz.ai

# CRM Integration
CRM_PROVIDER=mailchimp
# Options: 'mailchimp', 'hubspot', 'both'

# Mailchimp Configuration
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_SERVER_PREFIX=us1
MAILCHIMP_LIST_ID=your_list_id

# HubSpot Configuration
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token
HUBSPOT_PORTAL_ID=your_portal_id

# Email Service (SendGrid, AWS SES, etc.)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@siteoptz.ai
SENDGRID_GENERAL_WELCOME_TEMPLATE=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_TOOL_WELCOME_TEMPLATE=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Database Configuration (if using)
DATABASE_URL=postgresql://username:password@localhost:5432/siteoptz
# or
DATABASE_URL=mongodb://username:password@localhost:27017/siteoptz

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Security
API_SECRET_KEY=your_secret_key_for_api_authentication
WEBHOOK_SECRET=your_webhook_secret_for_crm_callbacks

# Rate Limiting (Redis configuration for production)
REDIS_URL=redis://localhost:6379

# Development/Production Environment
NODE_ENV=development
# Options: 'development', 'production', 'staging'