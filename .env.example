# Next.js Configuration
NEXT_PUBLIC_BASE_URL=https://siteoptz.ai
NEXT_PUBLIC_SITE_NAME=SiteOptz.ai

# CRM Integration
CRM_PROVIDER=gohighlevel
# Options: 'mailchimp', 'hubspot', 'gohighlevel', 'both'

# GoHighLevel Configuration
GHL_API_KEY=your_gohighlevel_api_key_here
GHL_LOCATION_ID=your_gohighlevel_location_id_here

# Mailchimp Configuration
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_SERVER_PREFIX=us1
MAILCHIMP_LIST_ID=your_list_id

# HubSpot Configuration
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token
HUBSPOT_PORTAL_ID=your_portal_id

# Email Service Configuration
EMAIL_FROM=info@siteoptz.ai
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=info@siteoptz.ai
EMAIL_SMTP_PASS=your_app_specific_password

# Alternative Email Providers:
# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@siteoptz.ai
SENDGRID_GENERAL_WELCOME_TEMPLATE=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_TOOL_WELCOME_TEMPLATE=d-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# AWS SES
# EMAIL_SMTP_HOST=email-smtp.us-east-1.amazonaws.com
# EMAIL_SMTP_USER=your_ses_smtp_username
# EMAIL_SMTP_PASS=your_ses_smtp_password

# Database Configuration (if using)
DATABASE_URL=postgresql://username:password@localhost:5432/siteoptz
# or
DATABASE_URL=mongodb://username:password@localhost:27017/siteoptz

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Security
API_SECRET_KEY=your_secret_key_for_api_authentication
WEBHOOK_SECRET=your_webhook_secret_for_crm_callbacks

# Rate Limiting (Redis configuration for production)
REDIS_URL=redis://localhost:6379

# Development/Production Environment
NODE_ENV=development
# Options: 'development', 'production', 'staging'

# DataForSEO API Credentials
DATAFORSEO_LOGIN=your_email@example.com
DATAFORSEO_PASSWORD=your_api_password

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Price IDs (create these in your Stripe dashboard)
STRIPE_STARTER_MONTHLY_PRICE_ID=price_starter_monthly_id
STRIPE_STARTER_YEARLY_PRICE_ID=price_starter_yearly_id
STRIPE_PRO_MONTHLY_PRICE_ID=price_pro_monthly_id
STRIPE_PRO_YEARLY_PRICE_ID=price_pro_yearly_id
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_enterprise_monthly_id
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_enterprise_yearly_id

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Google OAuth Configuration (Required for Google Sign-In)
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# Power BI Embedded Configuration
POWERBI_CLIENT_ID=your_powerbi_application_client_id
POWERBI_CLIENT_SECRET=your_powerbi_application_client_secret
POWERBI_TENANT_ID=your_azure_tenant_id
POWERBI_WORKSPACE_ID=your_powerbi_workspace_id
POWERBI_MARKETING_DATASET_ID=your_marketing_dataset_id
POWERBI_MARKETING_REPORT_ID=your_marketing_report_id

# Marketing Data APIs
GOOGLE_ADS_CLIENT_ID=your_google_ads_client_id
GOOGLE_ADS_CLIENT_SECRET=your_google_ads_client_secret
GOOGLE_ADS_REFRESH_TOKEN=your_google_ads_refresh_token
GOOGLE_ADS_DEVELOPER_TOKEN=your_google_ads_developer_token

META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_ACCESS_TOKEN=your_meta_long_lived_access_token

GOOGLE_ANALYTICS_CLIENT_ID=your_ga_client_id
GOOGLE_ANALYTICS_CLIENT_SECRET=your_ga_client_secret
GOOGLE_ANALYTICS_REFRESH_TOKEN=your_ga_refresh_token

TIKTOK_ACCESS_TOKEN=your_tiktok_business_access_token
TIKTOK_APP_ID=your_tiktok_app_id
TIKTOK_SECRET=your_tiktok_app_secret

LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_RESOURCE_GROUP=siteoptz-dashboard
AZURE_POWERBI_CAPACITY_NAME=siteoptz-capacity