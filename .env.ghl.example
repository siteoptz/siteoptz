# GoHighLevel Integration Settings
# Copy this file to .env.local and fill in your values

# GHL API Configuration
GHL_API_KEY=your_ghl_api_key_here
GHL_WEBHOOK_SECRET=your_webhook_secret_here
GHL_LOCATION_ID=your_location_id_here

# Cyfe White-Label Configuration
CYFE_API_KEY=your_cyfe_api_key_here
CYFE_API_URL=https://app.cyfe.com/api/v1
CYFE_WHITE_LABEL_DOMAIN=https://dashboards.yourdomain.com

# SSO Configuration
CYFE_SSO_SECRET=generate_a_strong_secret_key_here
NEXT_PUBLIC_OPTZ_DOMAIN=https://optz.siteoptz.ai

# Email Service Configuration (Choose one)
# Option 1: SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Option 2: SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# Email Settings
EMAIL_FROM="SiteOptz Analytics" <noreply@siteoptz.ai>

# Database Configuration (if not already set)
DATABASE_URL=your_database_connection_string

# NextAuth Configuration (if not already set)
NEXTAUTH_URL=https://siteoptz.ai
NEXTAUTH_SECRET=your_nextauth_secret_here