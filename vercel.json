{
  "functions": {
    "pages/api/**/*.js": {
      "maxDuration": 30
    },
    "pages/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=60, stale-while-revalidate"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/tools/copy.ai",
      "destination": "/tools/copy-ai",
      "permanent": true
    },
    {
      "source": "/categories/:category/",
      "destination": "/categories/:category",
      "permanent": true
    },
    {
      "source": "/tools/:tool/",
      "destination": "/tools/:tool",
      "permanent": true
    },
    {
      "source": "/compare/:comparison/",
      "destination": "/compare/:comparison",
      "permanent": true
    }
  ]
}